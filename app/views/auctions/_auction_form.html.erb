<% if @auction.errors.any? %>
  <ul>
    <% @auction.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @auction do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :date_ending %>
    <%= f.text_field :date_ending, class: 'form-control datepicker' %>
  </div>
  <div class="form-group">
    <%= f.label :reserve_price %>
    <%= f.text_field :reserve_price, class: 'form-control' %>
  </div>
  <%= f.submit btn_label, class: "btn btn-primary" %>
<% end %>
